[include]
  path = .gitconfig.personal
  path = .gitconfig.work

[color]
  interactive = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = magenta

[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green reverse
  old = red reverse
  whitespace = white reverse

[color "status"]
  changed = green
  untracked = red reverse

[core]
  editor = nano

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[format]
  pretty = fuller

[help]
  autocorrect = 1

[pull]
  ff = only

[push]
  default = current

[url "git@github.com:"]
  insteadOf = https://github.com/
